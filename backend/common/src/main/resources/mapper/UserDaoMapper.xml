<?xml version="1.0" encoding="utf-8" ?><!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.zxiaosi.common.dao.UserDao">
    <!-- id: sql语句的唯一标识 -->
    <!-- resultType: 返回值类型 -->
    <!-- parameterType: 参数类型 -->

    <!-- 查询所有用户 -->
    <select id="selectUser" parameterType="integer" resultType="User">
        select *
        from user
        where user.id = #{id}
    </select>

    <!-- 根据用户名查询用户 -->
    <select id="loadUserByUsername" resultType="User" parameterType="String">
        select *
        from user
        where username = #{username} limit 1
    </select>

    <!-- 实体类字段和数据库一致直接用resultType -->
    <select id="getRolesByUserId" resultType="Role">
        select r.*
        from user_role ur
                 left join role r on ur.role_id = r.id
        where ur.user_id = #{userId}
    </select>

    <update id="updatePassword">
        update user
        set password = #{password}
        where username = #{username}
    </update>

</mapper>